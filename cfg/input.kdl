input {
    keyboard {
        xkb {
            layout "us"
        }
        numlock
    }
    touchpad {
        tap
        natural-scroll
    }
    mouse {
        accel-speed -0.5
        accel-profile "flat"
    }
    focus-follows-mouse
    workspace-auto-back-and-forth
    disable-power-key-handling
}
cursor {
    hide-when-typing
    hide-after-inactive-ms 1000
}
