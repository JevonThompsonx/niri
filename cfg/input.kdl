input {
    keyboard {
        xkb {
            layout "us"
        }
        numlock
    }
    touchpad {
        tap
        natural-scroll
    }
    mouse {
        accel-speed 0.0  // Range: -1.0 (slowest) to 1.0 (fastest), 0.0 is default
        accel-profile "flat"  // Uncomment for no acceleration (linear/raw input)
    }
    focus-follows-mouse
    workspace-auto-back-and-forth
}
